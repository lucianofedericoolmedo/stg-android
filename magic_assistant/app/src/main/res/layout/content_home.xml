<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_home"
    tools:context="com.ingsoft.magic_assistant.HomeActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contadores de vidas"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/p1life"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignLeft="@+id/p2life"
                android:layout_alignStart="@+id/p2life" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upone"
                android:id="@+id/button"
                android:onClick="incP1"
                android:layout_below="@+id/p1life"
                android:layout_toLeftOf="@+id/p2life"
                android:layout_toStartOf="@+id/p2life" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:text="@string/downone"
                android:onClick="decP1"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/p2life"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:text="@string/upone"
                android:onClick="incP2"
                android:layout_below="@+id/p2life"
                android:layout_toLeftOf="@+id/p2life"
                android:layout_toStartOf="@+id/p2life" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:text="@string/downone"
                android:onClick="decP2"
                android:layout_alignTop="@+id/button3"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vidas Restantes"
                android:id="@+id/textView2"
                android:layout_below="@+id/button5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vidas Restantes"
                android:id="@+id/textView3"
                android:layout_marginTop="62dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REINICIAR"
                android:onClick="reiniciar"
                android:id="@+id/button5"
                android:layout_below="@+id/button6"
                android:layout_alignRight="@+id/button4"
                android:layout_alignEnd="@+id/button4"
                android:layout_marginTop="66dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upone"
                android:onClick="incVenonP2"
                android:id="@+id/button9"
                android:layout_alignTop="@+id/button10"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignStart="@+id/button3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downone"
                android:onClick="decVenonP2"
                android:id="@+id/button10"
                android:layout_below="@+id/button4"
                android:layout_toRightOf="@+id/button9"
                android:layout_toEndOf="@+id/button9"
                android:layout_marginTop="49dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upone"
                android:onClick="incVenonP1"
                android:id="@+id/button6"
                android:layout_alignTop="@+id/button8"
                android:layout_toLeftOf="@+id/p2life"
                android:layout_toStartOf="@+id/p2life" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downone"
                android:onClick="decVenonP1"
                android:id="@+id/button8"
                android:layout_marginTop="47dp"
                android:layout_below="@+id/button"
                android:layout_toRightOf="@+id/button6"
                android:layout_toEndOf="@+id/button6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Venenos"
                android:id="@+id/textView5"
                android:layout_above="@+id/button9"
                android:layout_alignRight="@+id/textView6"
                android:layout_alignEnd="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Venenos"
                android:id="@+id/textView6"
                android:layout_above="@+id/button6" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>